import random

maquina = random.randint(1,3)

jugador = int(input("Pedra (1), Paper(2), Tissores(3)? "))

if (maquina == 1 and jugador == 3):
    print("Has perdut")
elif (maquina > jugador):
    print("Has perdut")
elif ( maquina == jugador):
    print("Heu empatat")
else:
    print("Has guanyat")


